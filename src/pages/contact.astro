---
import Layout from '../components/Layout.astro';
import { services } from '../data/services';
import { courses } from '../data/courses';
---

<Layout title="Contacto" description="Contáctanos para más información sobre nuestros servicios de capacitación digital">
  <section class="bg-primary-50 py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        {/* Formulario de Contacto */}
        <div class="bg-white p-8 rounded-xl shadow-medium">
          <h2 class="text-3xl font-bold text-primary-800 mb-6">
            Contáctanos
          </h2>
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="nombre" class="block text-primary-700 mb-2">
                  Nombre Completo *
                </label>
                <input 
                  type="text" 
                  id="nombre" 
                  name="nombre" 
                  required 
                  class="w-full px-4 py-3 border border-primary-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent"
                  placeholder="Tu nombre"
                />
              </div>
              <div>
                <label for="email" class="block text-primary-700 mb-2">
                  Correo Electrónico *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required 
                  class="w-full px-4 py-3 border border-primary-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent"
                  placeholder="tu.correo@ejemplo.com"
                />
              </div>
            </div>

            <div>
              <label for="telefono" class="block text-primary-700 mb-2">
                Teléfono
              </label>
              <input 
                type="tel" 
                id="telefono" 
                name="telefono" 
                class="w-full px-4 py-3 border border-primary-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent"
                placeholder="(55) 1234-5678"
              />
            </div>

            <div>
              <label for="servicio" class="block text-primary-700 mb-2">
                Servicio de Interés
              </label>
              <select 
                id="servicio" 
                name="servicio" 
                class="w-full px-4 py-3 border border-primary-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent"
              >
                <option value="">Selecciona un servicio</option>
                {services.map((service) => (
                  <option value={service.id}>{service.title}</option>
                ))}
                <optgroup label="Cursos">
                  {courses.map((course) => (
                    <option value={`curso-${course.id}`}>{course.title}</option>
                  ))}
                </optgroup>
              </select>
            </div>

            <div>
              <label for="mensaje" class="block text-primary-700 mb-2">
                Mensaje *
              </label>
              <textarea 
                id="mensaje" 
                name="mensaje" 
                required 
                rows="4" 
                class="w-full px-4 py-3 border border-primary-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent"
                placeholder="Escribe aquí tus dudas o comentarios"
              ></textarea>
            </div>

            <div class="flex items-center">
              <input 
                type="checkbox" 
                id="politica" 
                name="politica" 
                required 
                class="mr-2 text-accent-500 focus:ring-accent-500"
              />
              <label for="politica" class="text-primary-600">
                Acepto la política de privacidad y tratamiento de datos
              </label>
            </div>

            <button 
              type="submit" 
              class="btn btn-primary w-full py-4 text-lg font-bold"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>

        {/* Información de Contacto */}
        <div>
          <div class="bg-white p-8 rounded-xl shadow-medium mb-8">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Información de Contacto
            </h3>
            <div class="space-y-6">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-accent-100 text-accent-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.61 18 2 12.39 2 6V3z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-800">Teléfono</h4>
                  <p class="text-primary-600">(55) 1234-5678</p>
                </div>
              </div>

              <div class="flex items-center">
                <div class="w-12 h-12 bg-accent-100 text-accent-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-800">Correo</h4>
                  <p class="text-primary-600">info@academiadigitalpro.com</p>
                </div>
              </div>

              <div class="flex items-center">
                <div class="w-12 h-12 bg-accent-100 text-accent-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-primary-800">Dirección</h4>
                  <p class="text-primary-600">CDMX, México</p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-medium">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Horario de Atención
            </h3>
            <div class="space-y-2">
              <div class="flex justify-between text-primary-700">
                <span>Lunes a Viernes</span>
                <span>9:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between text-primary-700">
                <span>Sábados</span>
                <span>10:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between text-primary-500">
                <span>Domingos</span>
                <span>Cerrado</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Mapa (Placeholder) */}
      <div class="mt-12 bg-white rounded-xl overflow-hidden shadow-medium">
        <div class="w-full h-96 bg-primary-100 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto text-primary-500 mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <p class="text-xl text-primary-700">
              Ubicación de Academia Digital Pro
            </p>
            <p class="text-primary-600">
              CDMX, México
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    document.getElementById('contact-form')?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Recopila los datos del formulario
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());

      // Validación básica
      if (!data.nombre || !data.email || !data.mensaje) {
        alert('Por favor, complete todos los campos obligatorios.');
        return;
      }

      // Aquí iría la lógica de envío real (por ejemplo, a un backend)
      console.log('Datos del formulario:', data);
      
      // Mensaje de confirmación
      alert('Gracias por tu mensaje. Nos pondremos en contacto contigo pronto.');
      
      // Limpiar formulario
      this.reset();
    });

    // Prellenar servicio si viene de la URL
    window.addEventListener('load', () => {
      const urlParams = new URLSearchParams(window.location.search);
      const servicioId = urlParams.get('servicio');
      const cursoId = urlParams.get('curso');

      if (servicioId) {
        const servicioSelect = document.getElementById('servicio');
        if (servicioSelect) {
          servicioSelect.value = servicioId;
        }
      } else if (cursoId) {
        const servicioSelect = document.getElementById('servicio');
        if (servicioSelect) {
          servicioSelect.value = `curso-${cursoId}`;
        }
      }
    });
  </script>
</Layout>