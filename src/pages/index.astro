---
import Layout from '../components/Layout.astro';
import { courses } from '../data/courses';
import { services } from '../data/services';

const heroTitle = 'Transforma tu Futuro Digital';
const heroSubtitle = 'Capacitación tecnológica y alfabetización digital para individuos y empresas';
---

<Layout title="Inicio" description="Academia Digital Pro - Transformando vidas a través de la tecnología">
  <section class="relative">
    <div class="container mx-auto px-4 py-16 lg:py-24 grid md:grid-cols-2 gap-8 items-center">
      <div class="space-y-6">
        <h1 class="text-4xl md:text-5xl font-bold text-primary-800">
          {heroTitle}
        </h1>
        <p class="text-xl text-primary-600">
          {heroSubtitle}
        </p>
        <div class="flex space-x-4">
          <a href="/services" class="btn bg-accent-500 text-white px-6 py-3 rounded-lg hover:bg-accent-600 transition-colors">
            Ver Cursos
          </a>
          <a href="/contact" class="btn border-2 border-primary-500 text-primary-500 px-6 py-3 rounded-lg hover:bg-primary-50 transition-colors">
            Contactanos
          </a>
        </div>
      </div>
      
      <div class="hidden md:block">
        <img 
          src="/images/hero-image.jpg" 
          alt="Hero image representing digital learning" 
          class="w-full h-auto rounded-xl shadow-medium object-cover"
        />
      </div>
    </div>
  </section>

  <section class="bg-white py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-primary-800 mb-12">
        Nuestros Servicios
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-primary-50 p-6 rounded-xl text-center hover:shadow-medium transition-shadow">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-accent-100 text-accent-600 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                  {service.icon === 'UserIcon' && (
                    <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
                  )}
                  {service.icon === 'LaptopIcon' && (
                    <path d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.5 1a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h2a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5h-2zm5 0a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h5a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5h-5zM9 8.5a.5.5 0 01.5-.5h5a.5.5 0 010 1h-5A.5.5 0 019 8.5zm-4 3a.5.5 0 01.5-.5h8a.5.5 0 010 1h-8a.5.5 0 01-.5-.5zm5 3a.5.5 0 01.5-.5h3a.5.5 0 010 1h-3a.5.5 0 01-.5-.5z" />
                  )}
                  {service.icon === 'GlobeIcon' && (
                    <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.536a2.573 2.573 0 01-.567-.267C8.07 8.34 8 8.007 8 8c0-.007.07-.34.433-.582zM11 9.234l-.553.392A.773.773 0 0110 9.607v-1.175a1.99 1.99 0 00.897.4c.045.18.13.353.258.514L11 9.234zM10 2a8 8 0 100 16 8 8 0 000-16zm0 13.5a7.496 7.496 0 01-1.519-.166c.085-.16.242-.343.437-.543l.597-.68.754-.902a.53.53 0 00.09-.29v-.79a.548.548 0 00-.21-.44.62.62 0 00-.412-.17h-2.5a.569.569 0 00-.428.192l-.492.56v.777a.635.635 0 00.094.352c.117.195.258.373.425.525l-1.564.607A7.5 7.5 0 1110 15.5z" />
                  )}
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-semibold text-primary-800 mb-4">
              {service.title}
            </h3>
            <p class="text-primary-600 mb-4">
              {service.description}
            </p>
            <ul class="space-y-2 text-primary-700">
              {service.benefits.map((benefit) => (
                <li class="flex items-center justify-center">
                  <svg class="w-4 h-4 mr-2 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-primary-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-primary-800 mb-12">
        Nuestros Cursos
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {courses.map((course) => (
          <div class="bg-white rounded-xl overflow-hidden shadow-soft hover:shadow-medium transition-shadow">
            <img 
              src={course.imageUrl} 
              alt={course.title} 
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary-800 mb-3">
                {course.title}
              </h3>
              <p class="text-primary-600 mb-4">
                {course.description}
              </p>
              <div class="flex justify-between text-sm text-primary-700">
                <span>Duración: {course.duration}</span>
                <span>Nivel: {course.level}</span>
              </div>
              <div class="mt-4">
                <h4 class="font-medium text-primary-700 mb-2">Temas:</h4>
                <ul class="space-y-1 text-primary-600">
                  {course.topics.map((topic) => (
                    <li class="flex items-center">
                      <svg class="w-4 h-4 mr-2 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
                      </svg>
                      {topic}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    transition: all 0.3s ease;
  }
</style>